#include "Array.h"

template<typename T>
Array<T>::~Array(void) { delete[] this->array; }



template<typename T>
Array<T>::Array(void) : array(new T[0]), len(0u) {}

int	main(void)
{
	Array<int> a;
	(void) a;
}
